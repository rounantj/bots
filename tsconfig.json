{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
        "node"
    ],
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "*.ts"
  ],
  "exclude": [
      "node_modules"
  ],
}
